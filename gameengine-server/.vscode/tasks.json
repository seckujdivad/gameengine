{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run compiled",
            "type": "shell",
            "command": "stack build --copy-bins; .\\build\\gameengine-server.exe --cwd app-root",
            "problemMatcher": []
        },
        {
            "label": "Run interpreted",
            "type": "shell",
            "command": "stack ghci app/Main.hs",
            "problemMatcher": []
        },
        {
            "label": "Copy to demo-cube",
            "type": "shell",
            "command": "py \"copy-to-demo-cube.py\""
        },
        {
            "label": "Build and copy",
            "type": "shell",
            "command": "stack build --copy-bins",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Output build plan and make Cabal file",
            "type": "shell",
            "command": "stack build --dry-run",
            "problemMatcher": []
        }
    ]
}